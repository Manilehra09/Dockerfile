# note you have to download "templatemo_591_villa_agency.zip" file manually 
 

FROM ubuntu

RUN apt-get update && \
    apt-get install -y apache2 apache2-utils zip unzip && \
    apt-get clean

# Copy the manually downloaded ZIP file
COPY templatemo_591_villa_agency.zip /tmp/

# Unzip and move the content
WORKDIR /tmp
RUN unzip templatemo_591_villa_agency.zip && \
    cp -rvf templatemo_591_villa_agency/* /var/www/html/

WORKDIR /var/www/html

EXPOSE 80
CMD ["/usr/sbin/apache2ctl", "-D", "FOREGROUND"]
